<AuModal
  @modalOpen={{@showModal}}
  @closeModal={{@toggleModal}}
  @title='Package versions'
  as |Modal|
>
  <Modal.Body>
    <AuTable>
      <:header>
        <tr>
          <th>Package name</th>
          <th>Version</th>
        </tr>
      </:header>
      <:body>
        {{#each-in @packages as |key value|}}
          <tr>
            <td>
              {{#if value.url}}
              <AuLinkExternal href={{value.url}}>{{key}}</AuLinkExternal>
              {{else}}
              {{key}}d
              {{/if}}
            </td>
            <td>{{value.version}}</td>

          </tr>
        {{/each-in}}
      </:body>
    </AuTable>
  </Modal.Body>
</AuModal>
